# /california-zaps/.htaccess
RewriteEngine On
RewriteBase /california-zaps/

# Servir archivos/carpetas existentes tal cual
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Todo lo demás va a index.php del proyecto
RewriteRule ^ index.php [L,QSA]

